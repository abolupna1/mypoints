@model points.ModelViews.BusinessAndAchievements.BusinessAndAchievementEditModelView

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>الأعمال</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item "><a asp-controller="Home" asp-action="Index">الرئيسية</a></li>
                    <li class="breadcrumb-item "><a asp-controller="TimesOfEvaluationAndPerformances" asp-action="Index">دورة قياس الأداء </a></li>
                    <li class="breadcrumb-item "><a asp-controller="TimesOfEvaluationAndPerformances" asp-action="Departments" 
                                                    asp-route-timesOfEvaluationAndPerformanceId="@Model.TimesOfEvaluationAndPerformanceId">الوكالات - الإدارات</a></li>
                    <li class="breadcrumb-item ">
                        <a asp-controller="BusinessAndAchievements" asp-action="Employees"
                           asp-route-departmentId="@ViewBag.departmentId"
                           asp-route-timesOfEvaluationAndPerformanceId="@Model.TimesOfEvaluationAndPerformanceId"> الموظفين </a>
                    </li>
                    <li class="breadcrumb-item ">
                        <a asp-controller="BusinessAndAchievements"
                           asp-action="WorksByEmployee" asp-route-employeeId="@Model.EmployeeId"
                           asp-route-timesOfEvaluationAndPerformanceId="@Model.TimesOfEvaluationAndPerformanceId">
                            @ViewBag.employeeName
                        </a>
                    </li>
                    <li class="breadcrumb-item active">
                       تعديل عمل
                    </li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <form asp-action="Edit">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-edit"></i>
                     تعديل عمل
                </h3>

            </div>

            <div class="card-body">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           

                    <div class="form-group">
                        <input hidden asp-for="EmployeeId" class="form-control">
                    </div>
                    <div class="form-group">
                        <input  hidden asp-for="TimesOfEvaluationAndPerformanceId" class="form-control">
                    </div>
                    <div class="form-row bg-light">
                        <div class="form-group col-md-9">
                            <label asp-for="TheWork" class="control-label"></label>
                            <input asp-for="TheWork" class="form-control" />
                            <span asp-validation-for="TheWork" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="WorkDate" class="control-label"></label>
                            <input asp-for="WorkDate" id="WorkDate" type="text" class="form-control" />
                            <span asp-validation-for="WorkDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="TheWorkDescription" class="control-label"></label>
                            <textarea asp-for="TheWorkDescription" class="form-control"></textarea>
                            <span asp-validation-for="TheWorkDescription" class="text-danger"></span>
                        </div>

                    </div>
                


            </div>
            <div class="card-footer">
                <div class="form-group">
                    <input type="submit" value="حفظ" class="btn btn-primary" />
                </div>
            </div>

        </div>
    </form>
</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        $(document).ready(function () {
           
            $("#WorkDate").datepicker();
            


        });
    </script>
}