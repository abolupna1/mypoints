@model IEnumerable<AppUserIndexModelViews>

@{
    ViewData["Title"] = "المستخدمين";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>المستخدمين</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item " ><a asp-controller="Home" asp-action="Index">الرئيسية</a></li>
                    <li class="breadcrumb-item active">المستخدمين</li>

                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
            <i class="fas fa-users"></i>
            المستخدمين</h3>
            <a asp-action="Create" class="btn  btn-primary  btn-sm text-white float-left m-0">
                <i class="fas fa-plus-circle"></i>
                مستخدم جديد
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table tab-content table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>الإسم</th>
                            <th>الإيميل</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 1;}
                        @foreach (var user in Model)
                        {
                            <tr>
                                <th>@i</th>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@user.Id" type="button" class="btn btn-success ml-1">
                                            <i class="fas fa-user-edit"></i>
                                        </a>
                                        @if (user.Id == 1 || user.Email == "abolupna1@gmail.com")
                                        {

                                        }
                                        else
                                        {
                                            <form asp-action="Delete" asp-route-id="@user.Id">
                                                <span id="confirmDeleteSpan_@user.Id" style="display:none">
                                                    <span>هل تريد الحذف ؟</span>
                                                    <button type="submit" class="btn btn-danger">نعم</button>
                                                    <a href="#" class="btn btn-primary"
                                                       onclick="confirmDelete('@user.Id', false)">لا</a>
                                                </span>
                                                <span id="deleteSpan_@user.Id">
                                                    <a href="#" class="btn btn-danger"
                                                       onclick="confirmDelete('@user.Id', true)">
                                                        <i class="fas fa-user-minus"></i>
                                                    </a>
                                                </span>
                                            </form>
                                        }






                                    </div>
                                </td>
                            </tr>
                            i++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.card-body -->
      
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
